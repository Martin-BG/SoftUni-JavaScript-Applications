<div id="register">
    <form action="#/register" method="post">
        <div class="container">
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>

            <p>Username</p>
            <input name="username" placeholder="Enter Username" required type="text">

            <p>Password</p>
            <input name="password" placeholder="Enter Password" required type="password">

            <p>Repeat Password</p>
            <input name="repeatPass" placeholder="Repeat Password" required type="password">
            <hr>

            <button class="registerbtn" type="submit">Register</button>
        </div>
        <div class="container signin">
            <p>Already have an account?
                <a href="#/login">Sign in</a>.</p>
        </div>
    </form>
</div>
